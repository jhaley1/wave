<script>
  $(function(){
  	$(window).load(function(){ // On load
  		$('.sign-up-container').css({'height':(($(window).height()))+'px'});
  	});
  	$(window).resize(function(){ // On resize
  		$('.sign-up-container').css({'height':(($(window).height()))+'px'});
  	});
  });
</script>

<div class="sign-up-container">
  <div class="sign-up-fields">
    <img src="/assets/gull.png" class="logo" id="sign-up-page-logo">
    <h2>Wavly Sign Up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.email_field :email, 
          :autofocus => true,
          :placeholder => "email" %>
      </div>

      <div>
        <%= f.password_field :password,
          :placeholder => "password" %>
      </div>

      <div>
        <%= f.password_field :password_confirmation,
          :placeholder => "confirm" %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "button", id: "sign-up-submit" %>
      </div>
    <% end %>
    
    <%= button_to "Forgot your password?", new_password_path(resource_name),
      class: "button", id: "sign-up-submit" %>
    
    <%= button_to "Sign in", new_session_path(resource_name),
      class: "button", id: "sign-up-submit" %>
  </div>
</div>